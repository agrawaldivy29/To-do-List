<%- include("header"); -%>
  <body>
    <div class="box" id="heading">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">

      <% listItems.forEach(element => { %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="hidden" name="listName" value="<%= listTitle %>"/>
            <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= element._id%>"/>
            <p><%= element.name%></p>
          </div>
        </form>
        
      <% }) %>

      <form action="/" method="post" class="item">
        <input type="text" name="itemName" placeholder="Add new item" autocomplete="off"/>
        <button type="submit" name="button" value=<%= listTitle %>>+</button>
      </form>

    </div>
  </body>
  
  <%- include("footer"); -%>
</html>
